---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'Plant Doctor - Diagnose & Care for Your Plants', description = 'Diagnose plant issues and generate care schedules instantly. Expert plant care guides for thousands of species.' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="bg-white text-gray-900">
		<slot />
	</body>
</html>
