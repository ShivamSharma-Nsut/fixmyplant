    </div>

    <footer class="bg-sage-700 text-white py-8 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <p>&copy; 2026 Plant Doctor. Expert care for every plant.</p>
      </div>
    </footer>
  </div>
</Layout>

<script define:vars={{ plantData }}>
  const generateCalendarBtn = document.getElementById('generate-calendar');

  generateCalendarBtn?.addEventListener('click', () => {
    const startDate = new Date();
    const events = [];

    for (let i = 0; i < 12; i++) {
      const eventDate = new Date(startDate);
      eventDate.setDate(eventDate.getDate() + (i * plantData.care.frequency));

      const dtstart = eventDate.toISOString().replace(/[-:]/g, '').split('.')[0] + 'Z';
      const dtend = new Date(eventDate.getTime() + 30 * 60000).toISOString().replace(/[-:]/g, '').split('.')[0] + 'Z';

      events.push(`BEGIN:VEVENT
DTSTART:${dtstart}
DTEND:${dtend}
SUMMARY:Water ${plantData.common_name}
DESCRIPTION:Time to water your ${plantData.common_name}. ${plantData.care.watering}
STATUS:CONFIRMED
SEQUENCE:0
END:VEVENT`);
    }

    const icsContent = `BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//Plant Doctor//Watering Schedule//EN
CALSCALE:GREGORIAN
METHOD:PUBLISH
X-WR-CALNAME:${plantData.common_name} Watering Schedule
X-WR-TIMEZONE:UTC
${events.join('\n')}
END:VCALENDAR`;

    const blob = new Blob([icsContent], { type: 'text/calendar;charset=utf-8' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = `${plantData.common_name.toLowerCase().replace(/\s+/g, '-')}-watering-schedule.ics`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  });
</script>
