---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const fs = await import('node:fs/promises');
  const path = await import('node:path');

  try {
    const searchIndexPath = path.join(process.cwd(), 'public', 'data', 'search_index.json');
    const searchIndexContent = await fs.readFile(searchIndexPath, 'utf-8');
    const searchIndex = JSON.parse(searchIndexContent);

    return searchIndex.map((plant: any) => ({
      params: { id: plant.id.toString() }
    }));
  } catch (error) {
    console.error('Failed to load search index:', error);
    return [
      { params: { id: '1' } },
      { params: { id: '2' } },
      { params: { id: '3' } }
    ];
  }
}

const { id } = Astro.params;

let plantData: any = null;

try {
  const fs = await import('node:fs/promises');
  const path = await import('node:path');
  const dataPath = path.join(process.cwd(), 'public', 'data', `${id}.json`);
  const fileContent = await fs.readFile(dataPath, 'utf-8');
  plantData = JSON.parse(fileContent);
} catch (error) {
  return Astro.redirect('/404');
}

if (!plantData) {
  return Astro.redirect('/404');
}
---

<Layout title={`${plantData.common_name} - Plant Doctor`} description={`Complete care guide for ${plantData.common_name} (${plantData.scientific_name}). Learn about watering, sunlight, and troubleshooting.`}>
