---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.astro';
import DiagnosticQuiz from '../components/DiagnosticQuiz.astro';
---

<Layout>
	<div class="min-h-screen">
		<section class="bg-gradient-to-b from-sage-50 to-white py-20 px-4">
			<div class="max-w-6xl mx-auto text-center">
				<h1 class="text-5xl md:text-6xl font-bold text-sage-700 mb-6">
					Plant Doctor
				</h1>
				<p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto" style="line-height: 1.5;">
					Diagnose plant issues and generate care schedules instantly
				</p>

				<SearchBar />

				<div class="mt-8 flex flex-wrap justify-center gap-4 text-sm text-gray-600">
					<span class="flex items-center gap-2">
						<svg class="w-5 h-5 text-sage-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
						</svg>
						10,000+ Plants
					</span>
					<span class="flex items-center gap-2">
						<svg class="w-5 h-5 text-sage-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
						</svg>
						Instant Diagnosis
					</span>
					<span class="flex items-center gap-2">
						<svg class="w-5 h-5 text-sage-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
						</svg>
						Care Schedules
					</span>
				</div>
			</div>
		</section>

		<section class="py-16 px-4 bg-white">
			<div class="max-w-6xl mx-auto">
				<DiagnosticQuiz />
			</div>
		</section>

		<section class="py-16 px-4 bg-sage-50">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-center text-sage-700 mb-12">
					Browse Popular Plants
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					<a href="/plant/1" class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
						<img
							src="https://images.pexels.com/photos/3125195/pexels-photo-3125195.jpeg?auto=compress&cs=tinysrgb&w=600"
							alt="Monstera Deliciosa"
							class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
						/>
						<div class="p-5">
							<h3 class="font-bold text-lg text-gray-900 mb-1">Monstera Deliciosa</h3>
							<p class="text-sm text-gray-500 italic mb-3">Monstera deliciosa</p>
							<p class="text-sm text-gray-600">Large tropical plant with iconic split leaves. Perfect for bright spaces.</p>
						</div>
					</a>

					<a href="/plant/2" class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
						<img
							src="https://images.pexels.com/photos/2123482/pexels-photo-2123482.jpeg?auto=compress&cs=tinysrgb&w=600"
							alt="Snake Plant"
							class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
						/>
						<div class="p-5">
							<h3 class="font-bold text-lg text-gray-900 mb-1">Snake Plant</h3>
							<p class="text-sm text-gray-500 italic mb-3">Sansevieria trifasciata</p>
							<p class="text-sm text-gray-600">Nearly indestructible low-light plant. Ideal for beginners.</p>
						</div>
					</a>

					<a href="/plant/3" class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
						<img
							src="https://images.pexels.com/photos/4751978/pexels-photo-4751978.jpeg?auto=compress&cs=tinysrgb&w=600"
							alt="Pothos"
							class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
						/>
						<div class="p-5">
							<h3 class="font-bold text-lg text-gray-900 mb-1">Pothos</h3>
							<p class="text-sm text-gray-500 italic mb-3">Epipremnum aureum</p>
							<p class="text-sm text-gray-600">Trailing vine that thrives on neglect. Great air purifier.</p>
						</div>
					</a>
				</div>
			</div>
		</section>

		<footer class="bg-sage-700 text-white py-8 px-4">
			<div class="max-w-6xl mx-auto text-center">
				<p>&copy; 2026 Plant Doctor. Expert care for every plant.</p>
			</div>
		</footer>
	</div>
</Layout>
